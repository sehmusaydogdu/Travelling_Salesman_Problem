<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game_result"
    android:orientation="vertical"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="24dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/odul_kayip"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="22dp">

        <TextView
            android:id="@+id/txtYorum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Tebrikler Oyunu Başarılı bir şekilde geçtiniz.\n"/>

        <TextView
            android:id="@+id/txtSure_Sonuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Süre : 00 : 00 : 00"/>

        <TextView
            android:id="@+id/txtPuan_Sonuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Puan :  100"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:background="@drawable/shape_background"
                android:id="@+id/btn_Oyun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="25dp"
                android:text="Oyuna Dönmek İçin Tıklayınız "/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>